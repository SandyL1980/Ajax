<div class="col-md-10"><br>

<%= render 'layouts/search' %>

  <div class="page-header">
    <h1>Listing posts</h1>
  </div>

    <%= link_to "New Post", new_post_path, class: 'btn btn-info btn-lg pull-right' %><br>



<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      <tbody>

    <div id="posts">
        <%= render @posts %>  
    </div>

  </tbody>
</table>

    <br>



</div>
